<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:vm="using:Dynamo_Desktop.ViewModels.Anime"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 	xmlns:fluent="using:FluentAvalonia.UI.Controls"
             mc:Ignorable="d"
			 d:DesignWidth="800"
			 xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
			 xmlns:loaders="using:AsyncImageLoader.Loaders"
			 x:DataType="vm:IndexViewModel"
			 d:DesignHeight="450"
			 xmlns:anime="using:Dynamo_Desktop.Models.Anime"
             x:Class="Dynamo_Desktop.Views.Anime.Index">
	<Grid>
		<TabControl>
			<TabItem
				Header="GogoAnime">
				<Grid>
				<fluent:ComboBox Header="Sort" HorizontalAlignment="Right" Margin="0,-30,20,0" SelectedIndex="0">
					<TextBlock>Newest</TextBlock>
					<TextBlock>Popular</TextBlock>
				</fluent:ComboBox>
				<ScrollViewer>
					<ItemsRepeater
						Items="{Binding
									GogoAnimeRecentEpisodes.results}">
						<ItemsRepeater.Layout>
							<UniformGridLayout
									ItemsStretch="Fill"
									MaximumRowsOrColumns="4"
										></UniformGridLayout>
						</ItemsRepeater.Layout>
						<ItemsRepeater.ItemTemplate>

							<DataTemplate
								x:DataType="anime:GogoResult">
								<Border
									Margin="10"		
											>
									<Border.Styles>
										<Style Selector="Border:pointerover">
											<Setter Property="Background">
												<SolidColorBrush Color="{DynamicResource
														  SystemAccentColor}" Opacity="0.2"/>
											</Setter>
										
										</Style>
									</Border.Styles>
									<Grid
										Margin="10"
										Height="295">
							<asyncImageLoader:AdvancedImage
											Source="{Binding image}"	
											Height="210"/>
										<Border
											HorizontalAlignment="Right"
											VerticalAlignment="Bottom"
											Margin="35"
											CornerRadius="50"
											Padding="15,5"
											Background="{DynamicResource
													SystemAccentColor}">
											<TextBlock
												Text="{Binding
													episodeNumber}"
											/>
										</Border>

										<TextBlock
										Text="{Binding
													title}"
										TextWrapping="Wrap"
										VerticalAlignment="Bottom"
										HorizontalAlignment="Center"
														
										/>

									</Grid>
								</Border>
							</DataTemplate>
						</ItemsRepeater.ItemTemplate>
					</ItemsRepeater>
				</ScrollViewer>
			</Grid>
			</TabItem>
			<TabItem
				Header="AnimePahe">
			</TabItem>
			<TabItem
				Header="KayoAnime">
				<TextBlock
					Text="kayoanime"/>
			</TabItem>
		</TabControl>

	</Grid>
</UserControl>
